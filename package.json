{
  "name": "commonxjs",
  "version": "0.0.0",
  "description": "Infrastructure utilities library for Bun and Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sqlite": {
      "types": "./dist/sqlite/index.d.ts",
      "import": "./dist/sqlite/index.js"
    },
    "./logger": {
      "types": "./dist/logger/index.d.ts",
      "import": "./dist/logger/index.js"
    },
    "./path": {
      "types": "./dist/path/index.d.ts",
      "import": "./dist/path/index.js"
    },
    "./id": {
      "types": "./dist/id/index.d.ts",
      "import": "./dist/id/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "utilities",
    "sqlite",
    "logger",
    "path",
    "bun",
    "nodejs",
    "cross-runtime"
  ],
  "author": "Deepractice",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deepractice/CommonX.git"
  },
  "bugs": {
    "url": "https://github.com/Deepractice/CommonX/issues"
  },
  "homepage": "https://github.com/Deepractice/CommonX#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
